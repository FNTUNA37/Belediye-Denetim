@model IList<StajProjesi.ViewModels.KonuCheckBox>
@{
    int temp = 0;

}
<div class="panel panel-default">
    <div class="panel-body">
        <ul class="list-group">


            @{

                for (var i = 0; i < Model.Count; i++)
                {

                    var baslık = Database.Session.Load<StajProjesi.Models.Baslık>(Model[i].BaslıkId);
                    if (Model[i].FirmaId == baslık.FirmaId)
                    {
                        if (temp != baslık.BaslıkId)
                        {
                            <br />
                            <h2>@baslık.BaslıkAdı </h2>
                        }
                    <li class="list-group-item">
                        @Html.Hidden("Konu[" + i + "].KonuId", Model[i].KonuId)
                        <label for="Konu_@(i)___IsChecked">
                            @Html.CheckBox("Konu[" + i + "].IsChecked", Model[i].IsChecked)
                            @Model[i].Konu


                        </label>
                    </li>
                        temp = baslık.BaslıkId;
                    }
                    }
                }


        </ul>
    </div>
</div>