@model IList<StajProjesi.Areas.Admin.ViewModels.RoleCheckBox>

<div class="panel panel-default">
    <div class="panel-heading">ROL</div>
    <div class="panel-body">
        <ul class="list-group">
            @for (var i = 0; i < Model.Count; i++)
            {
                <li class="list-group-item">
                    @Html.Hidden("Rol[" + i + "].RolId", Model[i].RolId)
                    <label for="Roles_@(i)___IsChecked">
                        @Html.CheckBox("Rol[" + i + "].IsChecked", Model[i].IsChecked)
                        @Model[i].RolAdı
                    </label>
                </li>
            }
        </ul>
    </div>
</div>